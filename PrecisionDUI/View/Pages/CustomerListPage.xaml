<UserControl x:Class="Precision.View.CustomerListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Precision.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource DarkestPurpBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        
        <local:SearchPanel/>
        
        <Grid Background="{StaticResource MaterialDesignDarkBackground}" 
              Margin="25 10 25 25" Grid.Column="1">
            <ScrollViewer>
                <local:CardListItemControl Margin="5" x:Name="CustomerList"/>
            </ScrollViewer>
        </Grid>
            
    </Grid>
</UserControl>
