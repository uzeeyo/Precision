<UserControl x:Class="Precision.View.Dialogs.SqlRetrieveError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Precision.View"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="10, 20" Width="300">
            <TextBlock Text="There was an error retrieving the requested information from the database." Foreground="White" TextWrapping="Wrap" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource MaterialDesignFlatAccentButton}" Content="OK" Margin="0 10"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}" HorizontalAlignment="Center"/>
            </StackPanel>
            

        </StackPanel>
    </Grid>
</UserControl>
